<Page x:Class="Finance.Pages.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Finance.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
      Title="SignUpPage">

    <Grid Background="White">
        <StackPanel>
            <Label Content="Create new user" HorizontalAlignment="Center" FontSize="32" Margin="0,50,0,0" />
            <Label HorizontalAlignment="Center" FontSize="20" Content="First Name" Margin="0,50,0,0"/>
            <TextBox x:Name="NameBox" Width="200"/>
            <Label HorizontalAlignment="Center" FontSize="20" Content="Last Name" Margin="0,10,0,0"/>
            <TextBox x:Name="LastNameBox" Width="200"/>
            <Button Content="Create" Width="100" Margin="10" Click="Create" />
            
        </StackPanel>
    </Grid>
</Page>
