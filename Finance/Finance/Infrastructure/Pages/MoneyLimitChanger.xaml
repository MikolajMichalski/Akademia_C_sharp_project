<Page x:Class="Finance.Infrastructure.Pages.MoneyLimitChanger"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Finance.Infrastructure.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="525" d:DesignWidth="500"
      Title="MoneyLimitChanger">

    <Grid Background="White">
        <StackPanel>
            <Label Content="Set monthly money limit" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,150,0,10"/>
            <TextBox x:Name="LimitText" Width="100" Height="30"/>
            <Button Width="80" Height="20" Content="Submit" Click="SubmitMoneyLimit" Margin=" 10" />
        </StackPanel>
    </Grid>
</Page>
