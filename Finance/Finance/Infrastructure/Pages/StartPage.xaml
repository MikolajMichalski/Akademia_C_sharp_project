<Page x:Class="Finance.Infrastructure.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Finance.Infrastructure.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
      Title="StartPage">

    <Grid Background="white">
        <StackPanel>
            <Label Content="Welcome to Finance Manager" FontSize="40" HorizontalAlignment="Center" Margin="0,100,0,0"/>
            <Button Content="Click to login" Width="200" Height="50" Margin="40" FontSize="20" Background="white" BorderThickness="0" Click="Start"/>


        </StackPanel>
    </Grid>
</Page>
